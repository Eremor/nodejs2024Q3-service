datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(uuid())
  login String @unique
  password String
  version Int @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Artist {
  id String @id @default(uuid())
  name String
  grammy Boolean

  albums Album[]
  tracks Track[]

  favorites Favorite[] @relation("FavoriteArtists")

  @@map("artists")
}

model Album {
  id String @id @default(uuid())
  name String
  year Int

  artistId String?
  artist Artist? @relation(fields: [artistId], references: [id])
  favorites Favorite[] @relation("FavoriteAlbums")

  tracks Track[]

  @@map("albums")
}

model Track {
  id String @id @default(uuid())
  name String
  artistId String?
  albumId String?
  duration Int

  artist Artist? @relation(fields: [artistId], references: [id])
  album Album? @relation(fields: [albumId], references: [id])
  favorites Favorite[] @relation("FavoriteTracks")

  @@map("tracks")
}

model Favorite {
  id String @id @default(uuid())
  artists Artist[] @relation("FavoriteArtists")
  albums Album[] @relation("FavoriteAlbums")
  tracks Track[] @relation("FavoriteTracks")

  @@map("favorites")
}